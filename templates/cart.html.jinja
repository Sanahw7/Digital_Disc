<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>
  {% include "components/navbar.html.jinja"%}
  <br>
  
  <main class="max-w-4xl mx-auto p-6 mb-5">
  <h1 class="text-xl font-bold text-center">Your Cart</h1>

  
  {% for x in cart %}
  <div class="cart-row">
        <img class="w-64 rounded-lg" src="{{x['Image']}}">
  <div class="font-bold">{{x["Name"]}}
  <div>${{x["Price"]}}
  </div>
  <div>
        <form method="post" action="/cart/{{x['ProductID']}}/update_qty">
        <input name="qty" type="number" value="{{x['Quantity']}}">
        <button type="submit">Update</button>

        </form>
  </div>
  <div>$ {{x ['Price'] * x['Quantity']}}
  </div>
 
  {%endfor%}
  </main>
  </body>
  </html>